<% content_for :title, "Material Types" %>
<h1>Material Types</h1>
<h3><%= link_to "New Material Type", new_material_type_path %></h3>
<table>
  <tr>
    <th style="text-align: left; padding-right:10px;"><strong>Name</strong></th>
    <th style="text-align: left; padding-right:10px;"><strong>Edit</strong></th>
    <th style="text-align: left;"><strong>Delete</strong></th>
  </tr>
  <% @material_types.each do |material_type| %>
    <tr>
      <td style="padding-right:10px;"><%= material_type.name %></td>
      <td style="padding-right:10px;"><%= link_to "Edit", edit_material_type_path(material_type) %></td>
      <td><%= material_type.materials_count == 0 ? link_to("Delete", material_type, data: { turbo_method: :delete }) : "Can't Delete" %></td>
    </tr>
  <% end %>
</table>